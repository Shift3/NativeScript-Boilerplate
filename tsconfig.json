{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": "./src",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "@env/*": [
                "./environments/*"
            ],
            "@features/*": [
                "./app/features/*"
            ],
            "@infrastructure*": [
                "./app/infrastructure/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}